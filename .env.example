# === Ghostfolio Instance ===
GHOSTFOLIO_BASE_URL=http://localhost:3333
GHOSTFOLIO_SECURITY_TOKEN=your-security-token-here

# === LLM ===
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4o

# === LangSmith Observability ===
LANGCHAIN_TRACING_V2=true
LANGCHAIN_API_KEY=your-langsmith-api-key-here
LANGCHAIN_PROJECT=agentforge-finance

# === Chat Persistence (shared Ghostfolio Postgres) ===
# If not set, chat history is in-memory only (lost on restart)
DATABASE_URL=postgresql://ghostfolio:ghostfolio-pass@postgres:5432/ghostfolio-db?sslmode=prefer

# === Ghostfolio Docker (for local dev) ===
COMPOSE_PROJECT_NAME=ghostfolio-dev
POSTGRES_DB=ghostfolio-db
POSTGRES_USER=ghostfolio
POSTGRES_PASSWORD=ghostfolio-pass
ACCESS_TOKEN_SALT=random-salt-change-me
JWT_SECRET_KEY=random-jwt-secret-change-me
REDIS_HOST=redis
REDIS_PORT=6379
